<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:YTMusicDL.Styles">

    <Color x:Key="MainRed">#A02821</Color>
    <SolidColorBrush x:Key="RedBrush" Color="{StaticResource MainRed}"/>

    <Color x:Key="MainBlue">#0B499C</Color>
    <SolidColorBrush x:Key="BlueBrush" Color="{StaticResource MainBlue}"/>

    <Color x:Key="OffWhite">#f0f0f0</Color>
    <SolidColorBrush x:Key="OffWhiteBrush" Color="{StaticResource OffWhite}"/>

    <Color x:Key="DarkBlue">#1b4487</Color>
    <SolidColorBrush x:Key="DarkBlueBrush" Color="{StaticResource DarkBlue}"/>

    <Color x:Key="GreenBlue">#407B99</Color>
    <SolidColorBrush x:Key="GreenBlueBrush" Color="{StaticResource GreenBlue}"/>

    <Color x:Key="Green">#75B988</Color>
    <SolidColorBrush x:Key="GreenBrush" Color="{StaticResource Green}"/>

    <Color x:Key="Grey">#575757</Color>
    <SolidColorBrush x:Key="GreyBrush" Color="{StaticResource Grey}"/>

</ResourceDictionary>